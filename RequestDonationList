import java.util.List;
import java.util.ArrayList;
public class RequestDonationList
{
    List<RequestDonation> rdEntities = new ArrayList<RequestDonation>();
    //methods
    public int get(RequestDonation RD){ 
    Entity RDEntity=RD.entity;
    int id= RDEntity.getID();
    return id;
    }
    public void add(RequestDonation RD){
    boolean exists = false;
    for(RequestDonation thisRD : rdEntities){
     if(get(thisRD)==get(RD)){
     thisRD.quantity+=RD.quantity;
     exists=true;
     break;
                     } 
                                            }
    if(exists==false){ rdEntities.add(RD); }
    }
    public void remove(RequestDonation RD){ rdEntities.remove(RD); }
    public void modify(RequestDonation RD,int newQuantity){RD.quantity= newQuantity;}
    public void monitor(){
    for(RequestDonation thisRD : rdEntities){
    System.out.println( (thisRD.entity).getName() + " in quantity of " + thisRD.quantity);
    }
    }
    public void reset(){rdEntities.clear();}
}
